# Contributor: X0rg

_gitname=hello
pkgbase=$_gitname
pkgname=('hello' )
pkgver=r3.3
pkgrel=1
pkgdesc="tesr  for Linux (Stable)"
arch=('x86_64')
url="http://www.sss.org"
license=('GPL3')
groups=('tset')
depends=('clang') # namcap complains about them
makedepends=('linux-headers') # namcap complains about them

# Darling git repo and all submodules.
source=('hello.c'
       )

# We skip md5 on all git repos
md5sums=('SKIP'
       )
options=('!buildflags')

pkgver() {
    #cd "$srcdir/$_gitname"
    #cd darling

    echo "r3.3"

    #printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {

    echo "HA AHhA "
    #cd "$srcdir/$_gitname"

    ls /lib/modules/
    ls /lib/modules/$(uname -r)

}

build() {
    #cd "$srcdir/$_gitname"
    clang hello.c -o hello

}

package_hello() {

    #cd "$srcdir/$_gitname"
    cp hello $srcdir/usr
}

